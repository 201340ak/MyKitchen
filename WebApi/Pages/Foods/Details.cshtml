@page
@model MyKitchen.Pages.Foods.DetailsModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Food</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Food.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Food.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Food.AvailableFoodUnits)
        </dt>
        <dd>
            @Html.Raw(String.Join(", ", @Model.Food.AvailableFoodUnits.Select(foodUnit => foodUnit.Unit.Abbreviation)))
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Food.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
</body>
</html>
