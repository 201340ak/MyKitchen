            </div>
            <div class="form-group">
                <label asp-for="Unit.PluralName" class="control-label"></label>
                <input asp-for="Unit.PluralName" class="form-control" />
                <span asp-validation-for="Unit.PluralName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit.Abbreviation" class="control-label"></label>
                <input asp-for="Unit.Abbreviation" class="form-control" />
                <span asp-validation-for="Unit.Abbreviation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
