@model MyKitchen.Pages.Units.EditModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Unit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Unit.Id" />
            <div class="form-group">
                <label asp-for="Unit.SingularName" class="control-label"></label>
                <input asp-for="Unit.SingularName" class="form-control" />
